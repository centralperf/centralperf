<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>

	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<File name="file" fileName="logs/centralperf.log" append="true">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Logger name="org.centralperf" level="info" />
		<Root level="info">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
	
</Configuration>